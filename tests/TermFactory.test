<?php
module_load_include('inc', 'phactorydrone', 'tests/PhactoryDroneTestCase');

class TermFactoryTest extends PhactoryDroneTestCase {
  public static function getInfo() {
    return array(
      'name' => 'TermFactory unit tests',
      'description' => 'Test the methods on the TermFactory class',
      'group' => 'Phactory Drone',
    );
  }

  public function setUp() {
    $this->load_factory_definitions();
    parent::setUp('taxonomy');
  }

  public function testTermFactoryCreate() {
    $vocabulary = Factory::create('vocab');

    $term = Factory::create('term', array('vid' => $vocabulary->vid));
    $this->assertNotNull($term->tid);

    $tree = taxonomy_get_tree($vocabulary->vid);
    $this->assertEqual($tree[0]->name, 'term_name0');
  }
}
